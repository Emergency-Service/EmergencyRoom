{{>layouts/header}}
<style>
    main {
            width: 70%;
            background: #ffffff;
            margin: 30px auto;
            padding: 30px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }
        h2 {
            font-size: 28px;
            margin-bottom: 20px;
        }
        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 25px;
        }
        .form-group {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .form-group input {
            padding: 15px;
            font-size: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-top: 10px;
            margin-bottom: 10px;
        }
        button {
            background-color: #0056b3;
            color: #ffffff;
            font-size: 22px;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            display: block;
            margin: 0 auto;
        }
        button:hover {
            background-color: #003d80;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }
        table th, table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
        table th {
            background-color: #f9f9f9;
            font-weight: bold;
        }
        table td {
            background-color: #ffffff;
        }
</style>
<main>
    <h2>응급 상황 설명</h2>
    <div class="form-group">
        <label for="summary">상황 메시지 요약</label>
        <input type="text" id="summary" placeholder="머리,아픔,피,고통">
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="latitude">위도</label>
            <input type="text" id="latitude" placeholder="예: 36.851">
        </div>
        <div class="form-group">
            <label for="longitude">경도</label>
            <input type="text" id="longitude" placeholder="예: 126.816">
        </div>
        <div class="form-group">
            <label for="emergency-count">추천 응급실 수</label>
            <input type="text" id="emergency-count" placeholder="예: 3">
        </div>
    </div>
    <button>다시하기</button>
    <h3>응급실 추천순</h3>
    <table>
        <thead>
        <tr>
            <th>번호</th>
            <th>병원 이름</th>
            <th>주소</th>
            <th>긴급 상황 전형</th>
            <th>전화번호</th>
            <th>거리</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td colspan="6">데이터 없음</td>
        </tr>
        </tbody>
    </table>
</main>
{{>layouts/footer}}