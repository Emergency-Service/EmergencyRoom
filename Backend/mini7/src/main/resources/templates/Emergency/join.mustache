<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원가입</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .signup-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .form-group input[type="radio"] {
            width: auto;
            margin-right: 10px;
        }
        .form-group .radio-label {
            font-weight: normal;
            margin-right: 15px;
        }
        .form-group-flex{
            display:flex;
        }
        .form-group .error-message {
            color: red;
            font-size: 12px;
            display: none;
        }
        .join_btns{
            display:flex;
            width:100%;
            justify-content: space-evenly;
        }
        .submit-btn,
        .cancel-btn{
            width: 40%;
            padding: 15px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .submit-btn:hover,
        .cancel-btn:hover{
            background-color: #45a049;
        }
    </style>
</head>
<body>
<div class="signup-container">
    <h1>회원가입</h1>
    <form id="signup-form">
        <div class="form-group">
            <label for="username">아이디</label>
            <input type="text" id="username" name="userId" placeholder="아이디를 입력하세요" required>
            <span class="error-message" id="username-error">아이디를 입력하세요.</span>
        </div>
        <div class="form-group">
            <label for="password">비밀번호</label>
            <input type="password" id="password" name="password" placeholder="비밀번호를 입력하세요" required>
            <span class="error-message" id="password-error">비밀번호를 입력하세요.</span>
        </div>
        <div class="form-group">
            <label for="name">이름</label>
            <input type="text" id="name" name="name" placeholder="이름을 입력하세요" required>
            <span class="error-message" id="name-error">이름을 입력하세요.</span>
        </div>
        <div class="form-group">
            <label>성별</label>
            <div class="">
                <label><input type="radio" name="gender" value="M" required> 남성</label>
                <label><input type="radio" name="gender" value="F" required> 여성</label>
                <span class="error-message" id="gender-error">성별을 선택하세요.</span>
            </div>
        </div>
        <div class="form-group">
            <label for="age">나이</label>
            <input type="number" id="age" name="age" placeholder="나이를 입력하세요" required>
            <span class="error-message" id="age-error">나이를 입력하세요.</span>
        </div>
        <div class="join_btns">
            <button type="submit" class="submit-btn">가입하기</button>
            <button class="cancel-btn" onclick='history.back()'>취소</button>
        </div>
    </form>
</div>

<script>
    document.getElementById('signup-form').addEventListener('submit', async function (e) {
        e.preventDefault(); // 기본 폼 제출 방지

        const username = document.getElementById('username').value.trim();
        const password = document.getElementById('password').value.trim();
        const name = document.getElementById('name').value.trim();
        const gender = document.querySelector('input[name="gender"]:checked').value;
        const age = parseInt(document.getElementById('age').value.trim(), 10);

        const requestData = {
            userId: username,
            password: password,
            name: name,
            gender: gender,
            age: age
        };

        try {
            const response = await fetch('/auth/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestData),
            });

            if (response.ok) {
                const result = await response.json();
                alert(result.message || "회원가입 성공!");
                window.location.href = '/auth/login'; // 로그인 페이지로 리디렉션
            } else {
                const errorData = await response.json();
                alert(errorData.message || "회원가입 실패!");
            }
        } catch (error) {
            console.error('Error:', error);
            alert('서버 오류가 발생했습니다. 다시 시도해주세요.');
        }
    });
</script>
</script>
</body>
</html>
